<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostVideoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar_layout_add_post">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/add_post_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close_add_Video_post_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_close" />

                <ImageView
                    android:id="@+id/save_new_Video_post_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_check" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_layout_add_post"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <VideoView
                android:id="@+id/Video_post"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <EditText
                android:id="@+id/description_Video_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:hint="Say Anything About Your Poll...."
                android:maxLines="6" />

        </LinearLayout>

        <EditText
            android:id="@+id/Video_poll_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Polling_Question....."
            android:maxLines="2" />

        <EditText
            android:id="@+id/Video_contestant_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contestant One Name..." />

        <EditText
            android:id="@+id/Video_contestant_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contestant Two Name..."/>

        <Button
            android:id="@+id/picVideoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Pic the video"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>